<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态 -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary"/> <!-- 选中颜色 -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 默认背景色 -->
            <stroke
                android:width="1dp"
                android:color="@color/secondary_variant"/> <!-- 边框颜色 -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
